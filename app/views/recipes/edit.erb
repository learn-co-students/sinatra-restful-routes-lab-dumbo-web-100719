<h1>Edit <%= @recipe.name %>!</h1>

<form method="POST" action="/recipes/<%= @recipe.id %>">
<input type="hidden" name="_method" value="PATCH">
  <label for="recipe_name">Name</label>
  <input type="text" name="recipe[name]" value="<%= @recipe.name %>">
  <label for="recipe_ingredients">Ingredients</label>
  <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>">
  <label for="recipe_cook_time">Cook Time</label>
  <input type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %> minutes">

  <input type="submit" value="Edit!">
</form>